{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GeneratedArticle",
  "type": "object",
  "required": [
    "title",
    "summary",
    "slug",
    "date",
    "category",
    "tags",
    "canonical_url",
    "sources",
    "content_markdown"
  ],
  "properties": {
    "title": { "type": "string", "minLength": 10, "maxLength": 120 },
    "summary": { "type": "string", "minLength": 40, "maxLength": 220 },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "date": { "type": "string", "format": "date" },
    "category": {
      "type": "string",
      "enum": ["ai-news", "spring-backend", "backend-engineering", "cloud-platform"]
    },
    "tags": {
      "type": "array",
      "minItems": 2,
      "maxItems": 6,
      "items": { "type": "string", "minLength": 2, "maxLength": 24 }
    },
    "canonical_url": { "type": "string", "format": "uri" },
    "sources": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "object",
        "required": ["title", "url"],
        "properties": {
          "title": { "type": "string", "minLength": 4 },
          "url": { "type": "string", "format": "uri" },
          "published_at": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "content_markdown": {
      "type": "string",
      "minLength": 3500,
      "description": "Full markdown body including required sections"
    }
  },
  "additionalProperties": false
}
